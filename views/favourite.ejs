<!DOCTYPE html>
<html>
<head>
  <title>Favourite Products</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-light">
  <div class="container py-5">
    <h2 class="mb-4 text-center">My Favourite Products</h2>

    <% if (favourites.length === 0) { %>
      <div class="alert alert-warning text-dark">No products in your favourites list.</div>
    <% } else { %>
      <div class="row">
        <% favourites.forEach(product => { %>
          <div class="col-md-4 mb-4">
            <div class="card shadow-lg">
              <img src="/uploads/<%= product.image %>" class="card-img-top" alt="<%= product.name %>" style="height: 250px; object-fit: cover;">
              <div class="card-body text-dark">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text">â‚¹ <%= product.price %></p>
                <a href="/user/favourite/remove/<%= product._id %>" class="btn btn-danger btn-sm">ðŸ—‘ Remove</a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>

    <div class="mt-4 text-center">
      <a href="/user" class="btn btn-light">â¬… Back to Home</a>
    </div>
  </div>
</body>
</html>
